{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "baseUrl": ".",

        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "noImplicitReturns": false,
        "resolveJsonModule": true,
        "declaration": false,
        "outDir": "build",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
